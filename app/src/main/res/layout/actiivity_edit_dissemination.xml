<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/card_note"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/background_card"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomEnd="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/til_title_dissemination"
                    android:layout_marginStart="16dp"
                    android:hint="@string/text_title_desimination"
                    app:boxCornerRadiusTopStart="8dp"
                    android:background="@android:color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/edt_title_dissemination" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="8dp"
                    android:hint="@string/abstrak"
                    android:id="@+id/til_abstract"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusTopStart="8dp"
                    android:background="@android:color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:maxLines="20"
                        android:gravity="top"
                        android:id="@+id/edt_abstract" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomEnd="8dp"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/til_keyword"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"
                    android:hint="@string/keyword"
                    app:boxCornerRadiusTopStart="8dp"
                    android:background="@android:color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/edt_keyword" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Publikasi"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@android:color/black"
                    />

                <RadioGroup
                    android:layout_marginStart="10dp"
                    android:id="@+id/rg_choise_status"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_not_yet_empty"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belum diisi"/>

                    <RadioButton
                        android:id="@+id/rb_journal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/journal"/>

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:background="@android:color/white"
                    app:boxCornerRadiusTopStart="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Nama Penerbit"
                    android:textSize="12sp"
                    android:id="@+id/til_name_publisher"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:id="@+id/edt_name_member"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    android:background="@android:color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Nomor ISSN/ISBN"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/til_number_ISSN_ISBN"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:id="@+id/edt_number_ISSN_ISBN"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="8dp"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:textSize="12sp"
                    app:boxCornerRadiusTopStart="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/page_publisher"
                    android:id="@+id/til_page_publisher"
                    android:background="@android:color/white"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_page_publisher"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    android:textSize="12sp"
                    android:background="@android:color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="@string/page_article"
                    android:id="@+id/til_page_article"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:id="@+id/edt_page_article"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artikel"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp" />

                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih File"
                        app:cornerRadius="8dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="10dp"
                        android:id="@+id/btn_choice_file_article" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama File"
                        android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/name_file_article" />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahan Presentasi"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp" />
                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih File"
                        app:cornerRadius="8dp"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="10dp"
                        android:id="@+id/btn_choice_file_presentation" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama File"
                        android:layout_marginStart="10dp"
                        android:id="@+id/name_presentation" />


                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bebas Administrasi"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp" />

                <LinearLayout
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih File"
                        app:cornerRadius="8dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="10dp"
                        android:id="@+id/btn_choice_free_administration" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama File"
                        android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/name_free_administration" />
                </LinearLayout>
                
                <LinearLayout
                    android:padding="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/journal"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/journal_category"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori Jurnal"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"/>

                    <RadioGroup
                        android:id="@+id/rg_type_journal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_empty"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kosong"/>

                        <RadioButton
                            android:id="@+id/rb_journal_international_reputation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jurnal Internasional Bereputasi"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_journal_international"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Jurnal Internasional"/>

                        <RadioButton
                            android:id="@+id/rb_journal_terakditasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Jurnal Nasional Terakreditasi"/>

                        <RadioButton
                            android:id="@+id/rb_journal_national"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Jurnal Nasional"/>

                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginStart="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        android:textSize="12sp"
                        android:background="@android:color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="@string/year_journal"
                        android:id="@+id/til_journal_year"
                        android:layout_marginEnd="16dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:id="@+id/edt_year_journal"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="@string/volume_journal"
                        android:id="@+id/til_volume_journal"
                        android:layout_marginEnd="16dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:id="@+id/edt_volume_journal"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:hint="@string/number_journal"
                        android:id="@+id/til_number_journal"
                        android:layout_marginEnd="16dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:id="@+id/edt_number_journal"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        android:elevation="4dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/color_btn_login"
                        android:textColor="@android:color/white"
                        android:id="@+id/btn_save" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:drawableLeft="@drawable/baseline_arrow_back_24"
                        android:text="@string/back"
                        android:elevation="4dp"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@color/color_btn_action"
                        android:textSize="12sp"
                        android:id="@+id/btn_back"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="match_parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/id_desimination_research"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@android:color/black"
                    android:text="@string/id_desimination_research"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/value_id_desimination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/id_desimination_research"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/id_desimination_research"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/id_desimination_research"
                    app:layout_constraintTop_toTopOf="@id/id_desimination_research" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/status_desimination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/text_status_desimination"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/id_desimination_research"
                    app:layout_constraintTop_toTopOf="@+id/value_status_desimination" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/value_status_desimination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/text_status_desimination"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/value_id_desimination"
                    app:layout_constraintStart_toStartOf="@id/value_id_desimination"
                    app:layout_constraintTop_toBottomOf="@id/value_id_desimination" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tittle_desimination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_title_desimination"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/status_desimination"
                    app:layout_constraintTop_toBottomOf="@id/status_desimination" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/value_tittle_desimination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/text_title_desimination"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/value_status_desimination"
                    app:layout_constraintStart_toEndOf="@+id/tittle_desimination"
                    app:layout_constraintTop_toTopOf="@+id/tittle_desimination" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/abstact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/abstrak"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tittle_desimination"
                    app:layout_constraintTop_toBottomOf="@+id/value_tittle_desimination" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/value_abstract"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/abstrak"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/value_tittle_desimination"
                    app:layout_constraintStart_toEndOf="@+id/abstact"
                    app:layout_constraintTop_toTopOf="@id/abstact" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/keyword"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/abstact"
                    app:layout_constraintTop_toBottomOf="@+id/value_abstract" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/value_keyword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/keyword"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/keyword"
                    app:layout_constraintTop_toTopOf="@id/keyword" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lecturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/lecturer"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/keyword"
                    app:layout_constraintTop_toBottomOf="@+id/value_keyword" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/value_lecturer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="9dp"
                    android:text="@string/keyword"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/lecturer"
                    app:layout_constraintTop_toTopOf="@id/lecturer" />



