<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/image_logo" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/title_logo_desimination"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        android:id="@+id/title_logo" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Pengajuan Sebagai Anggota Peneliti"
        android:textAllCaps="true"
        android:visibility="visible"
        android:paddingStart="5dp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        android:id="@+id/title_submission_as_research_member"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/title_logo" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="5dp"
        android:visibility="visible"
        android:id="@+id/title_accept_member"
        android:textAlignment="textStart"
        android:text="Naman Anda diajukan sebagai Anggota Peneliti untuk diseminasi Penelitian Berikut"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/title_submission_as_research_member"
        app:layout_constraintStart_toStartOf="@id/title_submission_as_research_member"
        app:layout_constraintEnd_toEndOf="@id/title_submission_as_research_member" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="5dp"
        android:id="@+id/container"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_accept_member"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Status"
            android:id="@+id/id_desimination"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_id_desimination"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="#1024"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/id_desimination"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/id_desimination"
            app:layout_constraintTop_toTopOf="@+id/id_desimination"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/title_desimination"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="@string/text_title_desimination"
            app:layout_constraintTop_toBottomOf="@id/id_desimination"
            app:layout_constraintStart_toStartOf="@id/id_desimination"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_title_desimination"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="dsafadfd"
            android:maxLines="2"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_desimination"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/value_id_desimination"
            app:layout_constraintTop_toTopOf="@+id/title_desimination"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/leader_desimination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecturer"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/title_desimination"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/title_desimination"
            app:layout_constraintTop_toBottomOf="@+id/value_title_desimination" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_leader_desimination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/leader_dummy"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/leader_desimination"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/value_title_desimination"
            app:layout_constraintTop_toBottomOf="@+id/value_title_desimination" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/status_desimination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_leader_desimination"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/leader_desimination"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/leader_desimination"
            app:layout_constraintTop_toBottomOf="@id/leader_desimination" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_status_desimination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/leader_dummy"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/status_desimination"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/value_leader_desimination"
            app:layout_constraintTop_toTopOf="@id/status_desimination" />

        <ProgressBar
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/progress_bar"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/value_status_desimination" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/color_btn_login"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="@id/status_desimination"
            android:drawableLeft="@drawable/baseline_check_24"
            android:focusable="true"
            android:text="Setuju"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/value_status_desimination"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="283dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tolak"
            android:drawableLeft="@drawable/baseline_close_24"
            android:backgroundTint="@color/btn_blank_form"
            app:cornerRadius="8dp"
            android:id="@+id/btn_reject"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/btn_accept"
            app:layout_constraintBottom_toBottomOf="@id/btn_accept"
            app:layout_constraintStart_toEndOf="@id/btn_accept" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>