<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:text="Nama"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/name_student" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/name_student"
            app:layout_constraintStart_toEndOf="@id/name_student"
            android:text="dsfasdfa"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/value_name_student" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/name_student"
            android:id="@+id/nim_student"
            app:layout_constraintStart_toStartOf="@id/name_student" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/nim_student"
            android:text="NIM"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/value_name_student"
            app:layout_constraintEnd_toEndOf="@id/value_name_student"
            android:id="@+id/value_nim" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="@string/text_status_desimination"
            app:layout_constraintTop_toBottomOf="@id/nim_student"
            app:layout_constraintStart_toStartOf="@id/nim_student"
            android:id="@+id/status_student"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:textSize="12sp"
            android:text="@string/status_desimination"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/status_student"
            app:layout_constraintStart_toStartOf="@id/value_nim"
            app:layout_constraintEnd_toEndOf="@id/value_nim"
            android:textAlignment="center"
            android:id="@+id/value_status_desimination" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/status_student"
            app:layout_constraintStart_toStartOf="@id/status_student"
            android:text="Pendaftaran"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/register_student" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/register_student"
            app:layout_constraintStart_toEndOf="@id/register_student"
            app:layout_constraintEnd_toEndOf="@id/value_status_desimination"
            android:id="@+id/value_register_student" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/register_student"
            app:layout_constraintStart_toStartOf="@id/register_student"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Pencatatan Presensi"
            android:id="@+id/note_precence_student" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@id/note_precence_student"
            app:layout_constraintStart_toEndOf="@id/note_precence_student"
            app:layout_constraintEnd_toEndOf="@id/value_register_student"
            android:id="@+id/value_note_presence" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>